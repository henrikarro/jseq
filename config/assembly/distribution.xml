      <directory>bin</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>docs</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>copyright.txt</exclude>
        <exclude>contributors.txt</exclude>
        <exclude>license-gpl.txt</exclude>
        <exclude>license-lgpl.txt</exclude>
      </excludes>
