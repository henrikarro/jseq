<assembly>
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>docs/copyright.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>docs/contributors.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>docs/license-gpl.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>docs/license-lgpl.txt</source>
      <outputDirectory>/</outputDirectory>
